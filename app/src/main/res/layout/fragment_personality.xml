            android:drawableStart="@drawable/ic_email"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:text="Trần Văn Hiền"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:textSize="24sp"
            android:text="Bạn bè"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
